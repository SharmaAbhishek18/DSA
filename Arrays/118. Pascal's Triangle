class Solution {
    public List<List<Integer>> generate(int numRows) {
        List<List<Integer>> result = new ArrayList<>();

        for (int i = 0; i < numRows; i++) {
            List<Integer> row = new ArrayList<>();
            int num = 1;                   // First value of every row is always 1
            for (int j = 0; j <= i; j++) {
                row.add(num);
                // Generate next number using binomial relation
                num = num * (i - j) / (j + 1);
            }
            result.add(row);
        }

        return result;
    }
}
