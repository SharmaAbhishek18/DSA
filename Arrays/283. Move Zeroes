class Solution {
    public void moveZeroes(int[] nums) {
        int j = 0; // slow pointer for the position of next non-zero

        for (int i = 0; i < nums.length; i++) {
            if (nums[i] != 0) {
                // swap nums[i] and nums[j]
                int temp = nums[i];
                nums[i] = nums[j];
                nums[j] = temp;

                j++; // move to next position for non-zero
            }
        }
    }
}
