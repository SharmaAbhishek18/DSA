class Solution {//T.C -> O(N) S.C->O(1)
    public int majorityElement(int[] nums) { //Using Moore's Voting Algo.
        int count = 0;
        int candidate = nums[0];
        for(int i : nums){
            if(i == candidate){
                count++;
            }
            else{
                count--;
                if(count == 0){//new candidate
                    candidate = i;
                    count++;
                }
            }
        }
        return candidate;
    }
}
