class Solution { //T.C -> O(N) n = length of t  and S.C - > O(1)
    public boolean isSubsequence(String s, String t) {

        if(s.length() == 0) return true;

        int i = 0;
        int j = 0;

        while(i < s.length() && j < t.length()){
        if(s.charAt(i) == t.charAt(j)){
            i++;
            j++;
        }
        else j++;
    }
        if(i == s.length()) return true;
        else  return false;   
       }
}
    
        
 
